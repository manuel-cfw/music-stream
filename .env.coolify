# ============================================================
# Coolify Environment Variables Template
# ============================================================
# Copy these variables into Coolify's "Environment Variables"
# section when deploying this application.
#
# Replace all placeholder values with your actual configuration.
# Mark sensitive values (passwords, secrets, keys) as "Secret"
# in Coolify's UI for additional security.
# ============================================================

# -----------------------------
# Application Settings
# -----------------------------
NODE_ENV=production
APP_URL=https://yourdomain.com
API_URL=https://yourdomain.com/api/v1

# -----------------------------
# Database Configuration
# -----------------------------
# These are used by MariaDB and the backend service
DB_DATABASE=unified_playlist
DB_USERNAME=unified_user
DB_PASSWORD=CHANGE_ME_secure_password
DB_ROOT_PASSWORD=CHANGE_ME_root_password

# -----------------------------
# JWT Authentication
# -----------------------------
# Generate JWT_SECRET with: openssl rand -hex 32
JWT_SECRET=CHANGE_ME_generate_with_openssl_rand_hex_32
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# -----------------------------
# Encryption Key
# -----------------------------
# Used to encrypt OAuth tokens stored in database
# Generate with: openssl rand -hex 16
ENCRYPTION_KEY=CHANGE_ME_generate_with_openssl_rand_hex_16

# -----------------------------
# Spotify OAuth
# -----------------------------
# Get credentials from: https://developer.spotify.com/dashboard
# Add redirect URI in Spotify Dashboard: https://yourdomain.com/api/v1/providers/spotify/callback
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=https://yourdomain.com/api/v1/providers/spotify/callback

# -----------------------------
# SoundCloud OAuth (Optional)
# -----------------------------
# Get credentials from: https://soundcloud.com/you/apps
# Add redirect URI: https://yourdomain.com/api/v1/providers/soundcloud/callback
SOUNDCLOUD_CLIENT_ID=your_soundcloud_client_id
SOUNDCLOUD_CLIENT_SECRET=your_soundcloud_client_secret
SOUNDCLOUD_REDIRECT_URI=https://yourdomain.com/api/v1/providers/soundcloud/callback

# -----------------------------
# Email / SMTP Configuration
# -----------------------------
# Used for sending magic link authentication emails
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@yourdomain.com

# -----------------------------
# Rate Limiting
# -----------------------------
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# -----------------------------
# Logging
# -----------------------------
# Options: error, warn, info, debug
LOG_LEVEL=info

# -----------------------------
# Frontend (Vite Build Args)
# -----------------------------
# These are baked into the frontend build
VITE_API_URL=https://yourdomain.com/api/v1
VITE_APP_NAME=Unified Playlist Manager
