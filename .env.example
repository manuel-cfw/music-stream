# Application
NODE_ENV=development
APP_URL=http://localhost:5173
API_URL=http://localhost:3000/api/v1

# Database
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=unified_playlist
DB_USERNAME=unified_user
DB_PASSWORD=unified_password
DB_ROOT_PASSWORD=root_password

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption (for provider tokens)
# Generate with: openssl rand -hex 16
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef

# Spotify OAuth
# Get these from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:3000/api/v1/providers/spotify/callback

# SoundCloud OAuth (if available)
# Get these from https://soundcloud.com/you/apps
SOUNDCLOUD_CLIENT_ID=your_soundcloud_client_id
SOUNDCLOUD_CLIENT_SECRET=your_soundcloud_client_secret
SOUNDCLOUD_REDIRECT_URI=http://localhost:3000/api/v1/providers/soundcloud/callback

# Email (for magic links)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@unified-playlist.local

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug

# Frontend
VITE_API_URL=http://localhost:3000/api/v1
VITE_APP_NAME=Unified Playlist Manager
